pipeline {
    agent any
    stages {
        stage('environment variables') {
            steps {
                sh 'printenv'
                sh 'ls -la'
            }
        }       
        stage('Setup') {
            steps {
                sh "poetry install --with dev"
            }
        }

        stage('Test') {
            steps {
                sh "poetry run pytest"
            }
        }    
    }
}